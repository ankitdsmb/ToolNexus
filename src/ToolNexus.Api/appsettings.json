{
  "Serilog": {
    "UseJsonConsole": true,
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ]
  },
  "ToolResultCache": {
    "MaxEntries": 500,
    "AbsoluteExpirationSeconds": 300,
    "KeyPrefix": "toolnexus:tools"
  },
  "ConnectionStrings": {
    "Redis": ""
  },
  "RateLimiting": {
    "IpPerMinute": 120,
    "UserPerMinute": 240
  },
  "Security": {
    "HttpsRedirection": {
      "HttpsPort": 443
    },
    "Headers": {
      "EnableContentSecurityPolicy": true,
      "EnableCspReportOnlyInDevelopment": true,
      "XFrameOptions": "DENY",
      "XContentTypeOptions": "nosniff",
      "ReferrerPolicy": "strict-origin-when-cross-origin",
      "PermissionsPolicy": "camera=(), geolocation=(), microphone=()",
      "ContentSecurityPolicy": {
        "default-src": [ "'self'" ],
        "script-src": [ "'self'", "cdnjs.cloudflare.com" ],
        "style-src": [ "'self'", "'unsafe-inline'", "cdnjs.cloudflare.com" ],
        "img-src": [ "'self'", "data:" ],
        "font-src": [ "'self'", "cdnjs.cloudflare.com" ],
        "connect-src": [ "'self'" ]
      }
    },
    "ApiKeys": {
      "Enabled": true,
      "Keys": [
        "replace-with-production-api-key"
      ]
    },
    "InputSanitization": {
      "MaxInputCharacters": 200000,
      "RejectControlCharacters": true
    }
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  }
}
