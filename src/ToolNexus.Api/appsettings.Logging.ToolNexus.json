{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "/logs/app.log",
                "rollingInterval": "Day",
                "shared": true,
                "outputTemplate": "{Timestamp:O} [{Level:u3}] ({CorrelationId}) {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  },
  "LoggingOptions": {
    "EnableFileLogging": true,
    "EnableRuntimeLogCapture": true,
    "MinimumLevel": "Information",
    "RetentionDays": 14,
    "RuntimeDebugEnabled": false
  }
}
