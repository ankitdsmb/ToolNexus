@model IReadOnlyList<(string Label, string Url)>
<nav aria-label="Breadcrumb" class="breadcrumbs">
    <ol>
        @for (var i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            var isLast = i == Model.Count - 1;
            <li>
                @if (isLast)
                {
                    <span aria-current="page">@item.Label</span>
                }
                else
                {
                    <a href="@item.Url" aria-label="Navigate to @item.Label">@item.Label</a>
                }
            </li>
        }
    </ol>
</nav>
