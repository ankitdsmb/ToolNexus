@model ToolNexus.Web.Models.Layout.LayoutFooterViewModel

<footer class="footer">
    <div class="footer__inner">
        <div class="footer__meta">
            <a href="/" class="footer__brand" aria-label="ToolNexus Home">
                <span class="brand__dot" aria-hidden="true"></span>
                <span>ToolNexus</span>
            </a>
            <p class="footer__tagline">Developer-first utility platform for faster shipping.</p>
            <p class="footer__shortcut-line">Shortcuts: <kbd>Ctrl/Cmd + K</kbd> palette · <kbd>Ctrl/Cmd + Enter</kbd> run.</p>
            <p class="footer__version" data-version-display="@Model.VersionDisplay" data-build-number="@Model.BuildNumber">@Model.VersionDisplay · @Model.BuildNumber</p>
        </div>

        <nav class="footer__links" aria-label="Footer Navigation">
            <section class="footer__column" aria-label="Product links">
                <p class="footer__title">Product</p>
                <a href="/tools">Tools</a>
                <a href="/about">About</a>
                <a href="/contact-us">Contact</a>
            </section>

            <section class="footer__column" aria-label="Popular tools">
                <p class="footer__title">Popular</p>
                <a href="/tools/json-formatter">JSON Formatter</a>
                <a href="/tools/json-validator">JSON Validator</a>
                <a href="/tools/regex-tester">Regex Tester</a>
            </section>

            <section class="footer__column" aria-label="Resources links">
                <p class="footer__title">Resources</p>
                <a href="https://github.com" target="_blank" rel="noopener noreferrer">GitHub</a>
                <a href="/disclaimer">Disclaimer</a>
            </section>

            <section class="footer__column" aria-label="System links">
                <p class="footer__title">System</p>
                <a href="#" aria-disabled="true">Privacy</a>
                <a href="#" aria-disabled="true">Terms</a>
            </section>
        </nav>

        <div class="footer__bottom">
            <span>© @DateTime.UtcNow.Year ToolNexus</span>
            <span class="footer__perf" data-performance-badge>Stable · --ms</span>
        </div>
    </div>
</footer>
