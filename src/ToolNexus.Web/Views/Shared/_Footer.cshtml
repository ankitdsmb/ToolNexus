@model ToolNexus.Web.Models.Layout.LayoutFooterViewModel

<footer class="footer" role="contentinfo">
    <div class="footer__container">
        <div class="footer__columns" role="navigation" aria-label="Footer navigation">
            <section class="footer__column" aria-labelledby="footerToolsHeading">
                <h3 id="footerToolsHeading">Tools</h3>
                <a href="/tools/json-formatter">JSON Formatter</a>
                <a href="/tools/json-to-yaml">YAML Converter</a>
                <a href="/tools/uuid-generator">UUID</a>
            </section>

            <section class="footer__column" aria-labelledby="footerResourcesHeading">
                <h3 id="footerResourcesHeading">Resources</h3>
                <a href="/docs">Docs</a>
                <a href="/roadmap">Roadmap</a>
                <a href="/changelog">Changelog</a>
            </section>

            <section class="footer__column" aria-labelledby="footerCommunityHeading">
                <h3 id="footerCommunityHeading">Community</h3>
                <a href="https://github.com" target="_blank" rel="noopener noreferrer">GitHub ↗</a>
                <a href="/request-tool">Request Tool</a>
                <a href="/feedback">Feedback</a>
            </section>

            <section class="footer__column" aria-labelledby="footerTrustHeading">
                <h3 id="footerTrustHeading">Trust</h3>
                <a href="/privacy">Client-side Processing</a>
                <a href="/privacy">Privacy First</a>
                <a href="https://github.com" target="_blank" rel="noopener noreferrer">Open Source ↗</a>
            </section>
        </div>

        <div class="footer__bottom-strip" aria-label="System information and keyboard shortcuts">
            <span class="footer__brand">© 2026 ToolNexus</span>
            <span class="footer__separator" aria-hidden="true">│</span>
            <span class="footer__tagline">Built for developer velocity ⚡</span>
            <span class="footer__separator" aria-hidden="true">│</span>
            <span class="footer__version">@Model.VersionDisplay · Build @Model.BuildNumber</span>
            <span class="footer__separator" aria-hidden="true">│</span>
            <span class="footer__shortcuts" aria-label="Keyboard shortcuts">
                <kbd>⌘K</kbd> Palette
                <span aria-hidden="true">·</span>
                <kbd>⌘Enter</kbd> Run
                <span aria-hidden="true">·</span>
                <kbd>⌘⇧S</kbd> Share
            </span>
        </div>
    </div>
</footer>
