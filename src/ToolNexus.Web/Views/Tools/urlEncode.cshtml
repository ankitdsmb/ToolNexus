@model ToolPageViewModel
@{
    ViewData["Title"] = Model.Seo.Title;
    ViewData["Description"] = Model.Seo.Description;
    ViewData["CanonicalUrl"] = Model.Seo.CanonicalUrl;
    ViewData["JsonLd"] = Model.Seo.JsonLd;
    ViewData["Keywords"] = Model.Seo.Keywords;
}

@section Head {
    <link rel="stylesheet" href="~/css/tools/url-encode.css" asp-append-version="true" />
}

<div class="tool-runtime-local url-encode-runtime url-encode-tool">
    <header class="tool-local-header url-encode-tool__header">
        <div>
            <h2>@Model.Tool.Title</h2>
            <p>Standards-compliant URL encoding with component, full URL, and query-value modes.</p>
        </div>
        <span class="url-encode-badge">Client-side processing</span>
    </header>

    <section class="tool-actions url-encode-actions" aria-label="URL encode actions">
        <button id="encodeBtn" class="tool-btn tool-btn--primary" type="button">Encode</button>
        <button id="clearBtn" class="tool-btn tool-btn--outline" type="button">Clear input</button>
        <button id="copyBtn" class="tool-btn tool-btn--outline" type="button">Copy output</button>
    </section>

    <section class="tool-editors url-encode-layout" aria-label="URL encode workspace">
        <section class="tool-editor-panel tool-panel url-encode-panel" aria-labelledby="inputHeading">
            <div class="url-encode-panel__header">
                <h2 id="inputHeading">Raw input</h2>
                <p id="inputStats" class="url-encode-meta">0 chars · 0 bytes</p>
            </div>

            <label for="modeSelect" class="url-encode-label">Encoding mode</label>
            <select id="modeSelect" class="url-encode-select">
                <option value="component" selected>Encode component (default)</option>
                <option value="full-url">Encode full URL</option>
                <option value="query-values">Encode query parameter values only</option>
            </select>

            <div class="url-encode-options">
                <label><input id="plusSpaceToggle" type="checkbox" /> Encode spaces as + (form mode)</label>
                <label><input id="autoEncodeToggle" type="checkbox" checked /> Auto encode on input</label>
            </div>

            <label for="inputEditor" class="url-encode-label">Input text</label>
            <textarea id="inputEditor" class="tool-textarea tool-textarea--mono" rows="14" placeholder="Paste text, URL, or query string"></textarea>
            <p class="url-encode-shortcuts"><kbd>Ctrl</kbd> + <kbd>Enter</kbd> Encode · <kbd>Ctrl</kbd> + <kbd>L</kbd> Clear</p>
        </section>

        <section class="tool-editor-panel tool-panel url-encode-panel" aria-labelledby="outputHeading">
            <div class="url-encode-panel__header">
                <h2 id="outputHeading">Encoded output</h2>
                <p id="statusText" class="url-encode-meta">Ready</p>
            </div>

            <div id="loadingState" class="url-encode-loading" hidden>Processing…</div>

            <div id="errorBox" class="url-encode-error" role="alert" hidden>
                <h3 id="errorTitle"></h3>
                <p id="errorMessage"></p>
                <p id="errorAction" class="url-encode-error__action"></p>
            </div>

            <label for="outputEditor" class="url-encode-label">Encoded text</label>
            <textarea id="outputEditor" class="tool-textarea tool-textarea--mono" rows="14" readonly placeholder="Encoded output appears here"></textarea>
            <p id="outputStats" class="url-encode-meta">0 chars</p>
        </section>
    </section>

    <section class="tool-metrics" aria-live="polite">
        <p id="statusTextMetric">Execution status is shown in the output panel.</p>
    </section>
</div>

@section Scripts {
    <script type="module" src="~/js/tools/url-encode.js" asp-append-version="true"></script>
}
