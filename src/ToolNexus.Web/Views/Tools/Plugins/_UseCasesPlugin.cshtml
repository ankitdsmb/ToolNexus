@model ToolPageViewModel
@if (Model.Content?.UseCases.Any() == true)
{
    <details class="readme-disclosure" data-context-plugin="use-cases">
        <summary>Use cases</summary>
        <section class="readme-block section-frame" aria-label="Use cases">
            <p class="tool-section__eyebrow">UseCaseWorkflowGrid</p>
            <h2>Use cases</h2>
            <div class="readme-card-grid readme-card-grid--use-cases">
                @foreach (var useCase in Model.Content.UseCases)
                {
                    <article class="readme-card readme-card--workflow" data-actionable-card="true" tabindex="0">
                        <h3>Workflow</h3>
                        <p>@useCase</p>
                    </article>
                }
            </div>
        </section>
    </details>
}
