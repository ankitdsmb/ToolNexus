@model ToolPageViewModel
@using ToolNexus.Web.Rendering
@if (Model.Content?.Steps.Any() == true)
{
    var markdown = MarkdownDocRenderer.BuildQuickStartMarkdown(
        Model.Content.Steps.Select(step => (step.Title, step.Description)));

    <section class="readme-block quick-start-panel section-frame" aria-label="Quick start" data-context-plugin="quick-start">
        <div class="tool-md-content tool-md-content--quickstart">
            @MarkdownDocRenderer.Render(markdown)
        </div>
    </section>
}

@* SSR contract marker: <h2>Quick start</h2> *@
