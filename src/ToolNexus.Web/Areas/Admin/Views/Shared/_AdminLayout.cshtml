<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ToolNexus Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/core@1.4.0/dist/css/tabler.min.css" />
    <link rel="stylesheet" href="~/css/admin-shell.css" asp-append-version="true" />
</head>
<body>
<div class="page">
    <aside class="navbar navbar-vertical navbar-expand-lg" data-bs-theme="dark">
        <div class="container-fluid">
            <h1 class="navbar-brand navbar-brand-autodark">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-reset text-decoration-none">ToolNexus Admin</a>
            </h1>
            <div class="collapse navbar-collapse show" id="sidebar-menu">
                <ul class="navbar-nav pt-lg-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><span class="nav-link-title">Dashboard</span></a>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Tools" asp-action="Index"><span class="nav-link-title">Tools</span></a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Management" asp-action="Content"><span class="nav-link-title">Content</span></a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Management" asp-action="Categories"><span class="nav-link-title">Categories</span></a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Management" asp-action="Execution"><span class="nav-link-title">Execution</span></a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Management" asp-action="Analytics"><span class="nav-link-title">Analytics</span></a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Management" asp-action="Users"><span class="nav-link-title">Users</span></a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Management" asp-action="FeatureFlags"><span class="nav-link-title">Feature Flags</span></a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Management" asp-action="Settings"><span class="nav-link-title">Settings</span></a></li>
                </ul>
            </div>
        </div>
    </aside>
    <div class="page-wrapper">
        <header class="navbar navbar-expand-md d-print-none">
            <div class="container-xl">
                <div class="navbar-nav flex-row order-md-last gap-2">
                    <button type="button" class="btn btn-outline-secondary btn-sm" aria-label="Open command palette">Quick Find</button>
                    <button type="button" class="btn btn-primary btn-sm" aria-label="Create item">New</button>
                    <div class="nav-item d-none d-md-flex">
                        <span class="badge bg-azure-lt">Admin Shell</span>
                    </div>
                </div>
                <div class="collapse navbar-collapse" id="navbar-menu">
                    <div>
                        <h2 class="page-title mb-0">@ViewData["Title"]</h2>
                    </div>
                </div>
            </div>
        </header>
        <div class="page-body">
            <div class="container-xl">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/@@tabler/core@1.4.0/dist/js/tabler.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
