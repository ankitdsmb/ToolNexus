{
  "ManifestPath": "../../tools.manifest.json",
  "ApiSettings": {
    "BaseUrl": "",
    "ToolExecutionPathPrefix": "/api/v1/tools"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ToolSync": "Information",
      "RuntimeIncident": "Information",
      "AdminData": "Information",
      "ToolExecution": "Information"
    }
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },
  "Database": {
    "Provider": "PostgreSQL",
    "ConnectionString": "Host=localhost;Port=5432;Database=ToolNexus;Username=toolnexus;Password=toolnexus_dev;SSL Mode=Disable",
    "RunMigrationOnStartup": true,
    "RunSeedOnStartup": true,
    "EnableDevelopmentFallbackConnection": false,
    "DevelopmentFallbackConnectionString": "Host=localhost;Port=5432;Database=ToolNexus_DevFallback;Username=toolnexus;Password=toolnexus_dev;SSL Mode=Disable"
  },
  "DataProtection": {
    "KeyRingPath": ".keyring"
  },
  "InternalAuth": {
    "UserId": "internal-dev-user",
    "DisplayName": "Internal Dev User",
    "ToolPermissions": [
      "*:*"
    ],
    "SecurityLevels": [
      "High"
    ]
  },
  "AdminBootstrap": {
    "UserName": "",
    "Email": "",
    "Password": "",
    "DisplayName": "ToolNexus Administrator"
  },
  "StartupDiagnostics": {
    "Enabled": true,
    "LogFolder": "./logs/startup"
  },
  "LoggingOptions": {
    "RuntimeLogLevel": "Information",
    "RuntimeDiagnosticsEnabled": true,
    "Folders": {
      "Api": "./logs/api",
      "Runtime": "./logs/runtime",
      "Startup": "./logs/startup",
      "ToolRuntime": "./logs/tool-runtime"
    }
  },
  "ArchitectureEvolution": {
    "DriftDetectionThreshold": 0.7,
    "RecommendationConfidenceThreshold": 0.65,
    "LookbackHours": 168
  }
}
